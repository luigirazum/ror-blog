<header class="container">
  <nav class="session-nav flex">
    <% if user_signed_in? %>
      <%= link_to "Logout", destroy_user_session_path, data: { "turbo-method": :delete }, class: "lnk lnk--txt" %>
    <% else %>
      <%- if controller_name != 'sessions' %>
        <%= link_to "Login", new_session_path(resource_name), class: "lnk lnk--txt" %><br />
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name) , class: "lnk lnk--txt" %><br />
      <% end %>
    <% end %>

  
  </nav>
</header>
