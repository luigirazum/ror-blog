<section class="border-primary bg-white">
  <h2 class="ff-headings fw-bold fs-700">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form__field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form__input'  %>
    </div>

    <div class="form__field form__inline">
      <%= f.label :role %><br />
      <%= f.collection_select(:role, User::ROLES, :to_s, lambda { |i| i.to_s.humanize }, {}, { class: 'form__input' } ) %>
    </div>

    <div class="form__field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: 'form__input'  %>
    </div>

    <div class="form__field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em class="form__hint">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form__input'  %>
    </div>

    <div class="form__field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form__input'  %>
    </div>

    <div class="form__actions">
      <%= f.submit "Sign up", class: 'btn btn--primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
